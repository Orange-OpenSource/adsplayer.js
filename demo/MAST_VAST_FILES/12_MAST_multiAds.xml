<MAST xsi:schemaLocation="http://openvideoplayer.sf.net/mast
http://openvideoplayer.sf.net/mast/mast.xsd" xmlns="http://openvideoplayer.sf.net/mast" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<triggers>
		<trigger id="ad pod" description="start at 20 sec">
			<startConditions>
				<condition type="property" name="Position" operator="GEQ" value="00:00:05"/>
			</startConditions>
			<endConditions>
				<condition type="event" name="OnItemEnd">
				</condition>
				<!-- This 'resets' the trigger for the next clip-->
			</endConditions>
			<sources>
				<source uri="http://localhost:8080/adsPlayer.js/demo/MAST_VAST_FILES/VAST_5.xml" format="vast" >
					<sources/>
					<targets/>
				</source>
			</sources>
		</trigger>
	</triggers>
</MAST>
