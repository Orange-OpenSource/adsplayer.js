<MAST xsi:schemaLocation="http://openvideoplayer.sf.net/mast
http://openvideoplayer.sf.net/mast/mast.xsd" xmlns="http://openvideoplayer.sf.net/mast" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<triggers>
		<trigger id="preroll" description="start at 0sec">
			<startConditions>
				<condition type="property" name="Position" operator="GEQ" value="00:00:00"/>
			</startConditions>
			<endConditions>
				<condition type="event" name="OnItemEnd">
				</condition>
				<!-- This 'resets' the trigger for the next clip-->
			</endConditions>
			<sources>
				<source uri="VAST_1.xml" format="vast" >
				</source>
			</sources>
		</trigger>
		<trigger id="midroll" description="start at 30sec.">
			<startConditions>
				<condition type="property" name="Position" operator="GEQ" value="00:00:30"/>
			</startConditions>
			<endConditions>
				<condition type="event" name="OnItemEnd">
				</condition>
				<!-- This 'resets' the trigger for the next clip-->
			</endConditions>
			<sources>
				<source uri="http://localhost:8080/adsPlayer.js/demo/MAST_VAST_FILES/VAST_4.xml" format="vast" >
				</source>
			</sources>
		</trigger>
		<trigger id="midroll" description="start at 10sec.">
			<startConditions>
				<condition type="property" name="Position" operator="GEQ" value="00:00:10"/>
			</startConditions>
			<endConditions>
				<condition type="event" name="OnItemEnd">
				</condition>
				<!-- This 'resets' the trigger for the next clip-->
			</endConditions>
			<sources>
				<source uri="./VAST_2.xml" format="vast" >
				</source>
			</sources>
		</trigger>
        <trigger id="midroll" description="start at 20sec.">
			<startConditions>
				<condition type="property" name="Position" operator="GEQ" value="00:00:20"/>
			</startConditions>
			<endConditions>
				<condition type="event" name="OnItemEnd">
				</condition>
				<!-- This 'resets' the trigger for the next clip-->
			</endConditions>
			<sources>
				<source uri="http://localhost:8080/adsPlayer.js/demo/MAST_VAST_FILES/VAST_3.xml" format="vast" >
				</source>
			</sources>
		</trigger>
	</triggers>
</MAST>
