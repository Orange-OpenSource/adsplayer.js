<MAST xsi:schemaLocation="http://openvideoplayer.sf.net/mast http://openvideoplayer.sf.net/mast/mast.xsd" xmlns="http://openvideoplayer.sf.net/mast" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<triggers>
		<trigger id="preroll-1" description="preroll ad2">
			<startConditions>
				<condition type="event" name="OnItemStart"/>
			</startConditions>
			<endConditions>
				<condition type="event" name="OnItemEnd"/>
				<!-- This 'resets' the trigger for the next clip-->
			</endConditions>
			<sources>
				<source uri="../vast-2/VAST-01.xml" format="VAST"/>
			</sources>
			<targets>
				<target region="VideoArea" type="Linear"/>
			</targets>
		</trigger>
		<trigger id="preroll-2" description="preroll ad4">
			<startConditions>
				<condition type="event" name="OnItemStart"/>
			</startConditions>
			<endConditions>
				<condition type="event" name="OnItemEnd"/>
				<!-- This 'resets' the trigger for the next clip-->
			</endConditions>
			<sources>
				<source uri="../vast-2/VAST-02.xml" format="vast"/>
			</sources>
		</trigger>
	</triggers>
</MAST>
